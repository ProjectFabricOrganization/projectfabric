@inherits MvvmComponentBase<WallPaperViewModel>

<main class="@ViewModel.Theme.Dark">

    <div class="w-full mx-auto @ViewModel.Theme.Dark bg-white dark:bg-gray-900 text-black dark:text-white">
        <div class="p-4 text-center justify-center items-center py-8 md:py-20 bg-white dark:bg-gray-900 text-black dark:text-white">
            <h1 class="font-sans text-3xl ml-96 mr-96 justify-center items-center text-md mb-6 text-center font-medium tracking-tight mb-6 text-4xl dark:text-white">"Get an AI-generated business digital maintenance in seconds"</h1>
            <span class="text-md ml-96 mr-96 text-neutral-600 mb-6 block md:text-lg dark:text-white">Your free plan covers business model structure, marketing campaigns, digital maintenance. Improve your business, using AI.</span>
            <button
                type="button"
                @onclick="@ViewModel.GetStarted"
                class="text-yellow-400 w-auto hover:text-white border border-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-yellow-300 dark:text-yellow-300 dark:hover:text-white dark:hover:bg-yellow-400 dark:focus:ring-yellow-900"
                data-te-ripple-init
                data-te-ripple-color="light"
                data-popover-target="popover-default">
                Start using for free
            </button>
        </div>
    </div>
    
    <div class="w-full mx-auto @ViewModel.Theme.Dark bg-white dark:bg-gray-900">
        <hr class="w-96 h-1 mx-auto bg-gray-100 border-0 rounded">
    </div>

    <div class="w-full mx-auto @ViewModel.Theme.Dark bg-white dark:bg-gray-900 text-black dark:text-white">
        <div class="p-4 text-center py-8 md:py-20 bg-white dark:bg-gray-900 text-black dark:text-white">
            <h1 class="text-3xl ml-96 mr-96 font-medium tracking-tight mb-6 md:text-4xl dark:text-white">Join to us</h1>
            <span class="text-md ml-96 mr-96 text-neutral-600 mb-6 block md:text-lg dark:text-white">Are you an engineer, investor, salesman or analyst? Join the team soon and become part of our team.</span>
            <button
                type="button"
                @onclick="ViewModel.GetStarted"
                class="text-yellow-400 w-auto hover:text-white border border-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-yellow-300 dark:text-yellow-300 dark:hover:text-white dark:hover:bg-yellow-400 dark:focus:ring-yellow-900"
                data-te-ripple-init
                data-te-ripple-color="light">
                I'm in
            </button>
        </div>
    </div>
    
    <div class="w-full mx-auto @ViewModel.Theme.Dark bg-white dark:bg-gray-900">
        <hr class="w-96 h-1 mx-auto bg-gray-100 border-0 rounded dark:">
    </div>

    <div class="w-full mx-auto @ViewModel.Theme.Dark bg-white dark:bg-gray-900 text-black dark:text-white">
        <div class="p-4 text-center py-8 md:py-20 bg-white dark:bg-gray-900 text-black dark:text-white">
            <h1 class="text-3xl font-medium tracking-tight mb-6 text-4xl dark:text-white">Newsletter</h1>
            <span class="text-md text-neutral-600 mb-6 block md:text-lg dark:text-white">Sign up to stay in the loop with the latest features and updates!</span>
            <div class="flex justify-center">
                <input type="email" id="email" class="bg-gray-50 max-w-sm max-h-10 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="john.doe@company.com" required>
                <button type="button"
                        @onclick="ViewModel.GetStarted"
                        class="text-yellow-400 ml-2 mr-2 w-auto hover:text-white border border-yellow-400 justify-center hover:bg-yellow-500 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-yellow-300 dark:text-yellow-300 dark:hover:text-white dark:hover:bg-yellow-400 dark:focus:ring-yellow-900"
                        data-te-ripple-init
                        data-te-ripple-color="light">
                    Subscribe
                </button>
            </div>
        </div>
    </div>

    <div class="w-full mx-auto @ViewModel.Theme.Dark bg-white dark:bg-gray-900">
        <hr class="w-96 h-1 mx-auto bg-gray-100 border-0 rounded dark:">
    </div>
</main>