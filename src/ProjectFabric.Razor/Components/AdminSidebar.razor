@inherits MvvmComponentBase<AdminSidebarViewModel>

<div class="flex flex-col w-14 hover:w-64 md:w-64 h-full h-screen transition-all duration-300 border-none z-10 @ViewModel.Theme.Dark bg-white dark:bg-gray-900 text-black dark:text-white">
    <div class="flex flex-col justify-between flex-grow @ViewModel.Theme.Dark bg-white dark:bg-gray-900 text-black dark:text-white">
        <ul class="flex flex-col py-4 space-y-1 @ViewModel.Theme.Dark bg-white dark:bg-gray-900 text-black dark:text-white">
            <li class="px-5 hidden md:block">
                <div class="flex flex-row items-center h-8">
                    <div class="text-sm font-light tracking-wide text-gray-400 uppercase">Main</div>
                </div>
            </li>
            @foreach (var navItem in ViewModel.Theme.AdminTheme.SidebarMainItems)
            {
                <li>
                    <AdminSidebarItem Item="navItem"></AdminSidebarItem>
                    @* <img class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" src="@navItem.Icon" alt="@nameof(navItem.Icon)" /> *@
                </li>
            }
            <li class="px-5 hidden md:block">
                <div class="flex flex-row items-center mt-5 h-8">
                    <div class="text-sm font-light tracking-wide text-gray-400 uppercase">Settings</div>
                </div>
            </li>
            @foreach (var navItem in ViewModel.Theme.AdminTheme.SidebarSettingsItems)
            {
                <li>
                    <AdminSidebarItem Item="navItem"></AdminSidebarItem>
                </li>  
            }
        </ul>
        <p class="mb-14 px-5 py-3 hidden md:block text-center text-xs">Copyright 2024</p>
    </div>
</div>